generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model LastReleases {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      Json
  createdAd DateTime @default(now())
}

model mostPopular {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      Json
  createdAd DateTime @default(now())
}

model latestUpdates {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String
  lastChapter String
}

model popularManga {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  image       String
  lastChapter String
}
